{
  "manifest_version": 3,
  "name": "LinkedIn Company Filter",
  "version": "1.1",
  "description": "Hide job posts from companies you don't want to see.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Manage Blocked Companies"
  }
}